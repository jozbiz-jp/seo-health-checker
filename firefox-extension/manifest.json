{
  "manifest_version": 2,
  "name": "SEO Health Checker",
  "version": "1.0",
  "description": "Validates SEO-related meta tags (title, description, open graph, Twitter cards) on any webpage.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
